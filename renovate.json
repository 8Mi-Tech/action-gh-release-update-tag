{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 8am on monday"
    ]
  },
  "reviewers": [
    "richardsimko"
  ],
  "assignAutomerge": false,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "addLabels": [
        "automerge"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "autoMergeType": "branch"
    },
    {
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "automerge": true,
      "autoMergeType": "branch"
    }
  ]
}
